<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="form-horizontal">
  <div class="control-group">
    <%= f.label :username, class: "control-label" %>
    <div class="controls"><%= f.text_field :username, :disabled => true %></div>
  </div>

  <div class="control-group">
    <label class="control-label">Feed token</label>
    <div class="controls">
      <input type="text" value="<%= resource.feed_authentication_token %>" disabled="disabled">
      <%= link_to 'Reset token', reset_feed_token_path, :method => :post, :class => 'btn btn-warning' %>
      <br /><i>(Used to access to the RSS feeds without password, keep it secret!)</i>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, class: "control-label" %>
    <div class="controls"><%= f.email_field :email %></div>
  </div>

  <div class="control-group">
    <%= f.label :password, class: "control-label" %>
    <div class="controls">
    	<%= f.password_field :password, :autocomplete => "off" %>
    	<br /><i>(leave blank if you don't want to change it)</i>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, class: "control-label" %>
    <div class="controls"><%= f.password_field :password_confirmation %></div>
  </div>

  <div class="control-group">
    <%= f.label :current_password, class: "control-label" %>
    <div class="controls">
    	<%= f.password_field :current_password %>
    	<br /><i>(we need your current password to confirm your changes)</i>
    </div>
  </div>

  <div class="control-group">
    <div class="controls"><%= f.submit "Update", class: 'btn btn-primary' %></div>
  </div>
</div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-danger' %>.</p>
